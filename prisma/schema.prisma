// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Appointment {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  time          String
  duration      String
  date          String
  service       String
  location      String
  customerName  String
  customerEmail String
  customerPhone String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime? @updatedAt
  Barber        Barber?   @relation(fields: [barberId], references: [id])
  barberId      String?   @db.ObjectId
}

model Barber {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  location     String
  name         String
  email        String        @unique
  picture      String?       @default("/defaultimg.png")
  benefitOne   String?
  benefitTwo   String?
  benefitThree String?
  benefitFour  String?
  instagram    String?       @default("https://www.instagram.com")
  facebook     String?       @default("https://www.facebook.com")
  tiktok       String?       @default("https://www.tiktok.com")
  youtube      String?       @default("https://www.youtube.com")
  daysOff      String?
  appointments Appointment[]
  services     Service[]
}

model Service {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  price    String
  duration String
  barber   Barber @relation(fields: [barberId], references: [id])
  barberId String @db.ObjectId
}
